<% provide(:title, @title) %>
<div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= link_to gravatar_for(@user, size: 100), @user %>
          <h1><%= link_to @user.name, @user %></h1>
        </h1>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @feed_items.any? %>
      <ol class="microposts">
        <%= render @feed_items %>
      </ol>
    <% end %>
  </div>
</div>