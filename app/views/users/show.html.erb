<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <sectio class="user_info">
            <h1>
                <%= gravatar_for @user %>
            </h1>
              <h3>
                <%= @user.name %>
              </h3>
        </section>
                Profile: <%= @user.profile %><br/>
                Area: <%= @user.area %><br /><br />
                
                <% if logged_in? %>
                    <strong class="s-blr"><%= link_to "Profile Edit", edit_user_path(current_user) %></strong>
                <% end %><br /><br />
                <strong class="s-bl"><%= link_to "Follower", followers_user_path(@user) %> (<%= @user.follower_users.count %>)</strong>
                <strong class="s-br"><%= link_to "Follow", followings_user_path(@user) %> (<%= @user.following_users.count %>)</strong>
                
    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
          <h3>Microposts (<%= @user.microposts.count %>)</h3>
          <ol class="microposts">
            <%= render @microposts %>
          </ol>
        <% end %>
    </div>
</div>