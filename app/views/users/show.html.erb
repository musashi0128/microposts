<div class="row">
    <aside class="col-md-4">
        <sectio class="user_info">
            <h1>
                <%= gravatar_for @user %>
            </h1>
              <h3>
                <%= @user.name %>
              </h3>
        </section>
                Profile: <%= @user.profile %><br/>
                Area: <%= @user.area %><br /><br />
                <% if logged_in? %>
                    <%= link_to "[Profile Edit]", edit_user_path(current_user) %>
                <% end %>
    </aside>
    <div class="col-md-8">
        <% if @user.microposts.any? %>
          <h3>Microposts (<%= @user.microposts.count %>)</h3>
          <ol class="microposts">
            <%= render @microposts %>
          </ol>
        <% end %>
    </div>
</div>